/* pages/ucenter/ucenter.wxss */
page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
    padding: 0;
}
.profile-info {
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(to bottom, hsla(6.86, 94.59%, 43.53%, 1) 0%,
   hsla(6.86, 94.59%, 43.53%, 0.7) 65%,hsla(6.86, 94.59%, 43.53%, 0.5) 100%);
}

.profile-info .avatar {
  height: 128rpx ;
  width: 128rpx ;
  margin: 20rpx;
  border-radius: 50% ;
  border: 1rpx solid #fff ;
  overflow: hidden;
}
.profile-info .nickName {
  font-size: 37.5rpx;
  margin: 20rpx;
  color: #fff;
}